<html>
<style>
    .maincontainer {
        display: flex;
        justify-content: center;
        
        background: #bdc3c7;
        height: 100vh;

    }

    .root {
        width: 900px;
        height: auto;
        background: #74b9ff;
        border-radius: 10px;
        padding: 10px;

    }

    .heading {
        color: #8e44ad;
        font-size: 32px;
        font-weight: bold;
        font-family: Oxygen;
        display: flex;
        justify-content: center;
        padding: 5px;
    }
</style>


<html>

<head>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

    <link href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css' rel='stylesheet'>


    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <div class="maincontainer">
        <div class="root">
            <div class="heading">
                <span><img src="/images/airindia.png" width="40"> &nbsp; </span> Flight Enquiry System
            </div>
            <hr>
            <table class="striped">
                <thead>
                    <tr>
                        <th>Flight Id</th>
                        <th>Company Name</th>
                        <th>Source</th>
                        <th>Destination</th>
                        <th>Type</th>
                        <th>Class</th>
                        <th>Days</th>
                        <th>Update</th>
                    </tr>
                </thead>

                <tbody>
                    <% data.map((item)=>{ %>

                        <tr>
                            <td>
                                <%=item.flightid%>
                            </td>
                            <th>
                                <%=item.companyname %><br>
                                <a href='/flight/showpicture?flightid=<%=item.flightid%>&companyname=<%=item.companyname %>&logo=<%=item.logo %>'>
                                    <img src="/images/<%=item.logo%>" width="40">
                                    </a>
                                    </th>
                            <td>
                                <%=item.sc %><br>
                                    <%=item.sourcetiming %>
                            </td>
                            <td>
                                <%=item.dc %><br>
                                    <%=item.destinationtiming %>
                            </td>
                            <td>
                                <%=item.status %>
                            </td>
                            <td>
                                <%=item.flightclass %>
                            </td>
                            <td>
                                <%=item.days %>
                            </td>
                            <td><a href="/flight/displaybyid?fid=<%=item.flightid %>">Update</a></td>
                        </tr>
                        <% }) %>

                </tbody>

            </table>


        </div>
    </div>
</head>

</html>